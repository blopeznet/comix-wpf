<metrocontrols:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalFilesDatabase"
        xmlns:metrocontrols="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="LocalFilesDatabase.MainWindow"
        mc:Ignorable="d"
        BorderBrush="Black"
        Background="{StaticResource BackgroundBrush}"
        Title="COMIX" Height="768" Width="1024">
    <metrocontrols:MetroWindow.Resources>
    </metrocontrols:MetroWindow.Resources>
    <Grid DataContext="{Binding Source={StaticResource Locator}}" 
                  Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="Black" Margin="0,0,0,32"></Rectangle>
            <Grid x:Name="GridTitles" Background="{StaticResource BackgroundBrush}" VerticalAlignment="Bottom" Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="8,0,0,0" Orientation="Horizontal">
                    <TextBlock Foreground="White" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Text="COLECCIONES"/>
                    <TextBlock Foreground="White" Opacity="0.7" MaxWidth="240" Margin="4,0,0,-2" FontSize="16" TextWrapping="Wrap" Text="{Binding Main.Folders, Converter={StaticResource SnapDescriptionConverter}, Source={StaticResource Locator}}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Horizontal">
                    <TextBlock Foreground="White" MaxWidth="240" Margin="2,0,0,-2" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Text="ELEMENTOS"/>
                    <TextBlock Foreground="White" Opacity="0.7" MaxWidth="240" Margin="4,0,0,-2" FontSize="16" TextWrapping="Wrap" Text="{Binding Main.SelectedFolder, Converter={StaticResource FolderDescriptionConverter}, Source={StaticResource Locator}}"/>
                    <TextBlock MaxHeight="20" Foreground="#FF2F8E47" FontWeight="Bold" Margin="4,0,0,-2" FontSize="16" Text="{Binding Main.SelectedFolder, Source={StaticResource Locator},Converter={StaticResource PathToFolderConverter}}"/>
                </StackPanel>
            </Grid>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4" Orientation="Horizontal">
                <StackPanel>
                    <Button Height="50" Width="50" Foreground="White" BorderBrush="White" FontFamily="Segoe UI Symbol" Style="{DynamicResource MetroCircleButtonStyle}" Content="&#xE132;" FontSize="18" Margin="4" Click="ButtonOpen_Click"/>
                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Text="Abrir" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}">
                    <Button Height="50" Width="50" Foreground="White" BorderBrush="White" FontFamily="Segoe UI Symbol" Style="{DynamicResource MetroCircleButtonStyle}" Content="&#xE106;" FontSize="18" Margin="4" Click="ButtonClose_Click"/>
                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Text="Cerrar" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel>
                    <Button Height="50" Width="50" Foreground="White" BorderBrush="White" FontFamily="Segoe UI Symbol" Style="{DynamicResource MetroCircleButtonStyle}" Content="&#xE109;" FontSize="18" Margin="4" Click="ButtonAdd_Click"/>
                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Text="Nuevo" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}">
                    <Button Height="50" Width="50" Foreground="White" BorderBrush="White" FontFamily="Segoe UI Symbol" Style="{DynamicResource MetroCircleButtonStyle}" Content="" FontSize="18" Margin="4" Click="ButtonDelete_Click"/>
                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Text="Eliminar" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" Orientation="Horizontal">
                <Border x:Name="SearchBorder" Width="0"  Visibility="{Binding Main.SearchModeOn, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay, Source={StaticResource Locator}}"
                        BorderBrush="White" BorderThickness="1" Height="30" HorizontalAlignment="Stretch">

                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Width" Value="249"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Visibility, ElementName=SearchBorder}" Value="Visible">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource sbStart}"/>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox" Background="{StaticResource BackgroundBrush}"
                             HorizontalAlignment="Stretch"                                 
                             metrocontrols:TextBoxHelper.AutoWatermark="True" 
                             metrocontrols:TextBoxHelper.Watermark="TÍTULO"  
                             VerticalAlignment="Center"
                             Width="199"
                             BorderThickness="0"
                             Text="{Binding Main.SearchString, Mode=TwoWay, Source={StaticResource Locator}}"
                             Foreground="White" FontSize="14"/>
                        <Button x:Name="buttonLaunchSearch" Click="buttonLaunchSearch_Click" Width="50" Height="25" Margin="-4,2,2,2" BorderThickness="0" BorderBrush="White" Style="{DynamicResource AccentedSquareButtonStyle}" FontFamily="Segoe UI Symbol" Content="&#xE11A;" FontSize="12" VerticalAlignment="Center" />
                    </StackPanel>

                </Border>
                <StackPanel VerticalAlignment="Center" Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}">
                    <ToggleButton x:Name="SearchToggleButton"  IsChecked="{Binding Main.SearchModeOn, Mode=TwoWay, Source={StaticResource Locator}}" 
                                  Height="50" Width="50" Foreground="White" BorderBrush="White" FontFamily="Segoe UI Symbol" 
                                  Content="&#xE1A3;" FontSize="18" Margin="4" Style="{DynamicResource MetroCircleToggleButtonStyle}"/>
                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Text="Buscar" 
                               HorizontalAlignment="Center"
                               />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="240"/>
            </Grid.RowDefinitions>
            <ListView x:Name="ListViewFolders" 
                      SelectionMode="Extended"                       
                  BorderThickness="0"                     
                  SelectedIndex="0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      Grid.RowSpan="3" 
                      Margin="4,0,6,0"
                      ItemContainerStyle="{StaticResource ListViewContainerStyle}"
                      >
                <ListView.ItemsSource>
                    <Binding Path="Main.Folders" Source="{StaticResource Locator}"/>
                </ListView.ItemsSource>
                <ListView.SelectedItem>
                    <Binding Path="Main.SelectedFolder" Source="{StaticResource Locator}"/>
                </ListView.SelectedItem>
                <ListView.Visibility>
                    <Binding Converter="{StaticResource BooleanToVisibilityConverter}" Path="Main.IsDataAvaliable" Source="{StaticResource Locator}"/>
                </ListView.Visibility>
                <ListView.Background>
                    <StaticResource ResourceKey="BackgroundBrush"/>
                </ListView.Background>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                         <TextBlock Foreground="White" MaxWidth="240" FontSize="16" Margin="0,0,0,0" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding Path, Converter={StaticResource PathToFolderConverter}}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Rectangle x:Name="RectangleVerticalSeparator" Fill="{StaticResource AccentBrush}" Grid.RowSpan="3" Width="1" VerticalAlignment="Stretch" HorizontalAlignment="Right"
                 Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}"/>
            <Grid Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}" Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="50">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.2" Color="#FF141414"/>
                        <GradientStop Offset="0.8" Color="Black"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
            <ListView x:Name="ListViewFiles" Grid.Column="1" 
                  SelectedIndex="0"
                  Grid.Row="0"
                  Margin="6,0,2,2"
                  SelectionMode="Extended" 
                  BorderThickness="0"                     
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListView.Background>
                    <StaticResource ResourceKey="BackgroundBrush"/>
                </ListView.Background>
                <ListView.ItemsSource>
                    <Binding Path="Main.Files" Source="{StaticResource Locator}"/>
                </ListView.ItemsSource>
                <ListView.SelectedItem>
                    <Binding Path="Main.SelectedFile" Source="{StaticResource Locator}"/>
                </ListView.SelectedItem>
                <ListView.ItemTemplate>
                    <StaticResource ResourceKey="CoverTemplate"/>
                </ListView.ItemTemplate>
                <ListView.Visibility>
                    <Binding Converter="{StaticResource BooleanToVisibilityConverter}" Path="Main.IsDataAvaliable" Source="{StaticResource Locator}"/>
                </ListView.Visibility>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!--Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType={x:Type ScrollContentPresenter}}}"-->
                        <WrapPanel Background="{StaticResource BackgroundBrush}" 
                                   MinWidth="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                   Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                   MaxWidth="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
            ItemWidth="100"            Margin="0,0,-20,0"
            ItemHeight="140" HorizontalAlignment="Stretch"
                                   />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid x:Name="GridSeparator" Grid.Row="1" Grid.Column="1"/>
            <Grid x:Name="GridFile" Margin="0,0,0,0" Grid.Column="1" Grid.Row="2" 
                  Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}"
                   Background="{StaticResource BackgroundBrush}">
                <Grid Background="#33000000" Visibility="{Binding Main.SelectedFile, Converter={StaticResource NullToVisibilityConverter}, Source={StaticResource Locator}}"/>
                <metrocontrols:FlipView IsBannerEnabled="False"
            MouseHoverBorderEnabled="False" Grid.Row="2" BorderThickness="0" Margin="0,6,0,0" ItemsSource="{Binding ItemsSource, ElementName=ListViewFiles}"                                             
                                            SelectedItem="{Binding SelectedItem, ElementName=ListViewFiles}" VerticalAlignment="Stretch">
                    <metrocontrols:FlipView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center"  DataContext="{Binding SelectedItem, ElementName=ListViewFiles}" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel x:Name="StackImage" Grid.Column="1">
                                    <Image x:Name="myImage" VerticalAlignment="Center" Margin="8,12,0,0" Width="128" Height="192" Source="{Binding CoverByteArray, Converter={StaticResource ByteArrayToBitmapImageConverter}}"/>
                                    <Border Width="128" Height="192" Margin="8,0,0,0" Opacity="0.2">
                                        <Border.Background>
                                            <VisualBrush Visual="{Binding ElementName=myImage}">
                                                <VisualBrush.Transform>
                                                    <ScaleTransform ScaleX="1" ScaleY="-1" CenterY="100"/>
                                                </VisualBrush.Transform>
                                            </VisualBrush>
                                        </Border.Background>
                                        <Border.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="Black"/>
                                                <GradientStop Offset="0.8" Color="Transparent"/>
                                            </LinearGradientBrush>
                                        </Border.OpacityMask>
                                    </Border>
                                </StackPanel>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Button Visibility="{Binding Main.SelectedFile, Converter={StaticResource NullToVisibilityConverter}, Source={StaticResource Locator}}" x:Name="buttonFile" Click="buttonFile_Click" FontFamily="Segoe UI Symbol" Content="&#xE160;" Style="{DynamicResource AccentedSquareButtonStyle}" Margin="2" Width="100" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Right" />
                                    <Button Grid.Row="1" Visibility="{Binding Main.SelectedFile, Converter={StaticResource NullToVisibilityConverter}, Source={StaticResource Locator}}" x:Name="buttonFolder" Click="buttonFolder_Click"  FontFamily="Segoe UI Symbol" Content="&#xE1C1;" Height="40" Margin="2" Style="{DynamicResource AccentedSquareButtonStyle}" FontSize="18" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                </Grid>
                                <Grid Grid.Column="2" Margin="12">
                                    <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" Foreground="White" FontSize="22" FontWeight="Bold" TextWrapping="Wrap" Margin="6"/>
                                    <TextBlock Text="{Binding Size, Converter={StaticResource BytesToMbStringConverter}}" Foreground="#FF2F8E47" FontSize="14" Margin="2" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SourceFolderPath, Converter={StaticResource PathToFolderConverter}}" Foreground="White" FontSize="14" Margin="6" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </metrocontrols:FlipView.ItemTemplate>
                </metrocontrols:FlipView>
            </Grid>
        </Grid>

        <Border x:Name="RecentGrid" Width="600"  Height="400" BorderThickness="1" BorderBrush="{StaticResource AccentBrush}" Background="{StaticResource BackgroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.RowSpan="3" Visibility="{Binding Main.IsDataAvaliable, Converter={StaticResource BooleanToVisibilityConverter},ConverterParameter=inv}">
            <Grid Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal" Margin="12,0,0,0">
                    <TextBlock Foreground="White" MaxWidth="240" Margin="2,0,0,-2" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Text="RECIENTES"/>
                    <TextBlock Foreground="White" Opacity="0.7" MaxWidth="240" Margin="4,0,0,-2" FontSize="14" TextWrapping="Wrap" Text="("/>
                    <TextBlock Foreground="White" Opacity="0.7" MaxWidth="240" Margin="0,0,0,-2" FontSize="14" TextWrapping="Wrap" Text="{Binding Main.RecentFiles.Count, Source={StaticResource Locator}}"/>
                    <TextBlock Foreground="White" Opacity="0.7" MaxWidth="240" Margin="2,0,0,-2" FontSize="14" TextWrapping="Wrap" Text=" FICHEROS)"/>
                </StackPanel>
                <ListView x:Name="ListViewRecents" 
                       IsEnabled="{Binding Main.IsDataAvaliable, Converter={StaticResource InvBooleanConverter}}"
                      SelectionMode="Extended"                       
                  BorderThickness="0"                     
                  SelectedIndex="-1"                          
                  Grid.Row="1"
                  ItemsSource="{Binding Main.RecentFiles}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      Grid.RowSpan="2" 
                      Margin="4,0,6,0"
                          
                          ItemContainerStyle="{StaticResource ListViewContainerStyleClear}"
                      >

                    <ListView.Visibility>
                        <Binding Converter="{StaticResource BooleanToVisibilityConverter}" ConverterParameter="inv" Path="Main.IsDataAvaliable" Source="{StaticResource Locator}"/>
                    </ListView.Visibility>
                    <ListView.Background>
                        <StaticResource ResourceKey="BackgroundBrush"/>
                    </ListView.Background>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Button x:Name="buttonfast" Click="buttonfast_Click" Content="{Binding}" Style="{StaticResource ButtonClear}" Cursor="Hand" Background="Transparent" BorderBrush="Transparent" Foreground="White" BorderThickness="0" >
                            </Button>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Grid x:Name="LoadingGrid" Background="#CC141414" Visibility="{Binding Main.IsWorking, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Locator}}" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="myText" FontSize="74" FontWeight="Bold" Width="250">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                            <GradientStop Color="{StaticResource BackgroundColor}" Offset="0"/>
                            <GradientStop x:Name="WhiteOffset" Color="{StaticResource BackgroundColor}" Offset="1"/>
                            <GradientStop x:Name="GrayOffset" Color="{StaticResource AccentColor}" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard Storyboard.TargetProperty="Offset" Duration="0:0:1" RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="WhiteOffset" From="0" To="1" />
                                    <DoubleAnimation Storyboard.TargetName="GrayOffset" From="0" To="1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers><Run Text="COMIX"/></TextBlock>
                <Border Opacity="0.2" Width="250" Height="70" Margin="0,-30,0,0">
                    <Border.Background>
                        <VisualBrush Visual="{Binding ElementName=myText}">
                            <VisualBrush.Transform>
                                <ScaleTransform ScaleX="1" ScaleY="-1" CenterY="40"/>
                            </VisualBrush.Transform>
                        </VisualBrush>
                    </Border.Background>
                    <Border.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="Black"/>
                            <GradientStop Offset="0.8" Color="Transparent"/>
                        </LinearGradientBrush>
                    </Border.OpacityMask>
                </Border>
                <Label Height="28" Margin="19,0,17,15" x:Name="label2" HorizontalAlignment="Center" VerticalAlignment="Bottom"   
                  Content="{Binding Main.WorkingMsg, Source={StaticResource Locator}}" Foreground="{StaticResource AccentBrush}"/>
                <metrocontrols:ProgressRing Width="25" Height="25" Margin="4"/>
            </StackPanel>
        </Grid>

    </Grid>
</metrocontrols:MetroWindow>
